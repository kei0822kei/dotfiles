{
  "configurations": {
    "python": {
      "adapter": "debugpy",
      "configuration": {
        "type": "python",
        "request": "launch",
        "stopOnEntry": true,
        "console": "externalTerminal",
        "debugOptions": [],
        "program": "${file}"
      }
    }
  },
  "breakpoints": {
    "exception": {
      "raised": "N",
      "uncaught": "Y"
    }
  }
}
